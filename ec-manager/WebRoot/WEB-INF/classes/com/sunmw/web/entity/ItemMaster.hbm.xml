<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.sunmw.web.entity">
	<class
		name="ItemMaster"
		table="item_master"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="item_id"
		>
			<generator class="identity"/>
		</id>

		<property
			name="ItemType"
			column="item_type"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="ItemCd"
			column="item_cd"
			type="string"
			not-null="false"
			length="40"
		/>
		<property
			name="ItemName"
			column="item_name"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="ItemDesc"
			column="item_desc"
			type="string"
			not-null="false"
		/>
		<property
			name="ItemPrice"
			column="item_price"
			type="big_decimal"
			not-null="false"
			length="18"
		/>
		<property
			name="ItemStdPrice"
			column="item_std_price"
			type="big_decimal"
			not-null="false"
			length="18"
		/>
		<property
			name="ItemStatus"
			column="item_status"
			type="string"
			not-null="false"
			length="10"
		/>
		<property
			name="Ctime"
			column="ctime"
			type="timestamp"
			not-null="false"
		/>
		<property
			name="Mtime"
			column="mtime"
			type="timestamp"
			not-null="false"
		/>
		<property
			name="Receive1"
			column="receive1"
			type="string"
			not-null="false"
			length="45"
		/>
		<property
			name="Receive2"
			column="receive2"
			type="string"
			not-null="false"
			length="45"
		/>
		<property
			name="Receive3"
			column="receive3"
			type="string"
			not-null="false"
			length="45"
		/>
		<property
			name="Receive4"
			column="receive4"
			type="string"
			not-null="false"
			length="45"
		/>
		<property
			name="Receive5"
			column="receive5"
			type="string"
			not-null="false"
			length="45"
		/>
		<property
			name="Receive6"
			column="receive6"
			type="string"
			not-null="false"
			length="45"
		/>
		<property
			name="CompanyId"
			column="company_id"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="ReserveInv"
			column="reserve_inv"
			type="integer"
			not-null="false"
			length="10"
		/>

 		<set name="skuMaster" cascade="all" outer-join="true">
            <key column="item_id"/>
            <one-to-many class="com.sunmw.web.entity.SkuMaster" />
        </set>
	</class>	
</hibernate-mapping>